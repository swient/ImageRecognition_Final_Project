<hc:Window x:Class="ImageRecognition_Final_Project.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="設定" Height="600" Width="800" ResizeMode="NoResize" Icon="/Image/settings.png">
    <Grid>
        <hc:UniformSpacingPanel Margin="20" Spacing="30" Orientation="Vertical">
            <GroupBox Header="語言設定" Margin="0,0,0,10">
                <hc:ComboBox Width="200">
                    <ComboBoxItem Content="中文"/>
                    <ComboBoxItem Content="英文"/>
                </hc:ComboBox>
            </GroupBox>
            <GroupBox Header="主題設定" Margin="0,0,0,10">
                <hc:ComboBox Width="200">
                    <ComboBoxItem Content="淺色"/>
                    <ComboBoxItem Content="深色"/>
                </hc:ComboBox>
            </GroupBox>
            <GroupBox Header="通知設定" Margin="0,0,0,10">
                <CheckBox Content="啟用通知"/>
            </GroupBox>
            <GroupBox Header="自動更新" Margin="0,0,0,10">
                <CheckBox Content="啟用自動更新"/>
            </GroupBox>
            <Button Content="保存" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center" Click="SaveSettings_Click"/>
        </hc:UniformSpacingPanel>
    </Grid>
</hc:Window>